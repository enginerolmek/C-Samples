#include <stdio.h>

char dizi[200];
int sayac=0;

int main() {
    printf("Bir dizgi giriniz:\n");
    gets(dizi);

    for (int i = 0; i < 200; i++) {
        if (dizi[i] == ' ')
            sayac++;
        else {
            continue;
        }
    }

    printf("Kelime sayiniz: %d", sayac + 1);

    return 0;
}
