#include <stdio.h>
#include <mem.h>

int dizi1[15];
int dizi2[15];
int toplamdizi[15];
int cikartmadizi[15];
int xdizi[15];
int boldizi[15];
int secim;
int sayac1=1;
int sayac2=1;

int main() {
    printf("-Iki Dizi Arasinda Hesap Makinesi-\n");

    for (int i=0; i<15; i++) {
            printf("Lutfen birinci dizinin %d. elemanini giriniz:\n", sayac1++);
            scanf("%d", &dizi1[i]);
        }

    for (int i=0; i<15; i++) {
        printf("Lutfen ikinci dizinin %d. elemanini giriniz:\n", sayac2++);
        scanf("%d", &dizi2[i]);
    }

    printf("Iki dizinin karsilikli elemanlarini toplamak icin 1'e;\n");
    printf("Iki dizinin karsilikli elemanlarini cikartmak icin 2'ye;\n");
    printf("Iki dizinin karsilikli elemanlarini carpmak icin 3'e\n");
    printf("Iki dizinin karsilikli elemanlarini bolmek icin 4'e basiniz.\n");
    scanf("%d", &secim);

    switch (secim) {
        case 1:
            printf("Birinci Diziniz:\n");
            for (int i=0; i<15; i++) {
                printf("%4d", dizi1[i]);
            }
            printf("\n");

            printf("Ikinci Diziniz:\n");
            for (int i=0; i<15; i++) {
                printf("%4d", dizi2[i]);
            }
            printf("\n");

            printf("Toplam Sonucu Yeni Diziniz:\n");
            for (int i=0; i<15; i++) {
                toplamdizi[i] = dizi1[i] + dizi2[i];
                printf("%4d", toplamdizi[i]);
            }
            printf("\n");
            break;
        case 2:
            printf("Birinci Diziniz:\n");
            for (int i=0; i<15; i++) {
                printf("%4d", dizi1[i]);
            }
            printf("\n");

            printf("Ikinci Diziniz:\n");
            for (int i=0; i<15; i++) {
                printf("%4d", dizi2[i]);
            }
            printf("\n");

            printf("Cikartma Sonucu Yeni Diziniz:\n");
            for (int i=0; i<15; i++) {
                cikartmadizi[i] = dizi1[i] - dizi2[i];
                printf("%4d", cikartmadizi[i]);
            }
            printf("\n");
            break;
            break;
        case 3:
            printf("Birinci Diziniz:\n");
            for (int i=0; i<15; i++) {
                printf("%4d", dizi1[i]);
            }
            printf("\n");

            printf("Ikinci Diziniz:\n");
            for (int i=0; i<15; i++) {
                printf("%4d", dizi2[i]);
            }
            printf("\n");

            printf("Carpma Sonucu Yeni Diziniz:\n");
            for (int i=0; i<15; i++) {
                xdizi[i] = dizi1[i] * dizi2[i];
                printf("%4d", xdizi[i]);
            }
            printf("\n");
            break;
            case 4:
            printf("Birinci Diziniz:\n");
            for (int i=0; i<15; i++) {
                printf("%4d", dizi1[i]);
            }
            printf("\n");

            printf("Ikinci Diziniz:\n");
            for (int i=0; i<15; i++) {
                printf("%4d", dizi2[i]);
            }
            printf("\n");

            printf("Bolme Sonucu Yeni Diziniz:\n");
            for (int i=0; i<15; i++) {
                boldizi[i] = dizi1[i] / dizi2[i];
                printf("%4d", boldizi[i]);
            }
            printf("\n");
            break;
        default:
            printf("Yanlis bir giris yaptiniz!\n");
            break;
    }
return 0;
}
