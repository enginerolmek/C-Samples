#include <stdio.h>

float x, sonuc;

int main() {
    printf("X degerinizi giriniz:");
    scanf("%f", &x);

    if (x == 0)
    {
        printf("1");
    }
    else if (x > 0)
    {
        sonuc = 3*x*x + 4*x + 2;
        printf("Sonuc: %0.2f", sonuc);
    }
    else if (x < 0)
    {
        sonuc = 4*x*x + 2*x + 4;
        printf("Sonuc: %0.2f", sonuc);
    }

}
