#include <stdio.h>
#include <mem.h>

char dizi[90];
int a;

int main() {
    printf("Char tipinde bir dizi giriniz:\n");
    gets(dizi);

    printf("Girdiginiz dizi:\n");
    puts(dizi);

    printf("Dizinin uzunlugu: %d\n", strlen(dizi));

    printf("Dizinin kacinci elemaninin adresini gormek istiyorsunuz?\n");
    scanf("%d", &a);

    printf("Dizinizin %d. elemaninin adresi: %p", a, dizi[a-1]);
    return 0;
}
